<!doctype html>
<html lang="en" ng-app="willGiveApp" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>WillGive</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/customJqueryValidation.css">

    <%activeMenu = "SignUp"%>
    <%include ../layout/navbar.ejs%>
</head>
<body>

<div class="container" style="min-height: 70%; width:40%">
    <div class="row">
        <h2 class="form-signin-heading text-center">Charity SignUp</h2>
        <div style="float: right">
            <span style="color:red; ">* </span>Required
        </div>
    </div>
    <form id="userSignupForm" class="col-xs-12"  method="post" style="padding-top: 2%">
        <div id="signUpReporter" style="padding-bottom: 2%"></div>
        <h3 class="form-signin-heading">1. Account</h3>

        <div class="row form-group-lg">
            <label for="signupEmail" class="">Email address
                <span style="color:red;">*</span>
            </label>
            <input type="email" id="signupEmail" name="signupEmail" class="form-control" placeholder="Email address" required>
        </div>
        <div class="row form-group-lg">
            <label for="signupPassword" class="">Password
                <span style="color:red;">*</span>
            </label>
            <input type="password" id="signupPassword" name="signupPassword" class="form-control" placeholder="Password" minlength="8" required>
        </div>
        <div class="row form-group-lg">
            <label for="signupPasswordConfirm" class="">Confirm Password
                <span style="color:red;">*</span>
            </label>
            <input type="password" id="signupPasswordConfirm" name="signupPasswordConfirm" class="form-control" placeholder="Confirm Password" equalTo="#signupPassword" minlength="8" required>
        </div>
        <h3 class="form-signin-heading">2. Basic Information</h3>

            <div class="row form-group-lg">
                    <label for="signupOrganizationName" class="">Organization Name
                        <span style="color:red;">*</span>
                    </label>
                    <input type="text" id="signupOrganizationName" name="signupOrganizationName" class="form-control" placeholder="Organization Name" required>
            </div>
            <div class="row form-group-lg">
                <label for="signupEIN" class="">EIN
                    <span style="color:red;">*</span>
                </label>
                <input type="text" id="signupEIN" name="signupEIN" class="form-control" placeholder="EIN" required>
            </div>
            <div class="row form-group-lg">
                <label for="signupAddress" class="">Address
                    <span style="color:red;">*</span>
                </label>
                <input type="text" id="signupAddress" name="signupAddress" class="form-control" placeholder="Address" required>
            </div>
            <div class="row form-group-lg">
                <div class="col-xs-8" style="padding-left: 0px" >
                    <label for="signupCity" class="">City
                        <span style="color:red;">*</span>
                    </label>
                    <input type="text" id="signupCity" name="signupCity" class="form-control" placeholder="City" required>
                </div>
                <div class="col-xs-4" style="padding-right: 0px">
                    <label for="signupState" class="">State
                        <span style="color:red;">*</span>
                    </label>
                    <select class="selectpicker form-control" required="true">
                        <option value="AL">Alabama</option>
                        <option value="AK">Alaska</option>
                        <option value="AZ">Arizona</option>
                        <option value="AR">Arkansas</option>

                        <option value="CA">California</option>
                        <option value="CO">Colorado</option>
                        <option value="CT">Connecticut</option>
                        <option value="DE">Delaware</option>

                        <option value="DC">Dist of Columbia</option>
                        <option value="FL">Florida</option>
                        <option value="GA">Georgia</option>
                        <option value="HI">Hawaii</option>

                        <option value="ID">Idaho</option>
                        <option value="IL">Illinois</option>
                        <option value="IN">Indiana</option>
                        <option value="IA">Iowa</option>

                        <option value="KS">Kansas</option>
                        <option value="KY">Kentucky</option>
                        <option value="LA">Louisiana</option>
                        <option value="ME">Maine</option>

                        <option value="MD">Maryland</option>
                        <option value="MA">Massachusetts</option>
                        <option value="MI">Michigan</option>
                        <option value="MN">Minnesota</option>

                        <option value="MS">Mississippi</option>
                        <option value="MO">Missouri</option>
                        <option value="MT">Montana</option>
                        <option value="NE">Nebraska</option>

                        <option value="NV">Nevada</option>
                        <option value="NH">New Hampshire</option>
                        <option value="NJ">New Jersey</option>
                        <option value="NM">New Mexico</option>

                        <option value="NY">New York</option>
                        <option value="NC">North Carolina</option>
                        <option value="ND">North Dakota</option>
                        <option value="OH">Ohio</option>

                        <option value="OK">Oklahoma</option>
                        <option value="OR">Oregon</option>
                        <option value="PA">Pennsylvania</option>
                        <option value="RI">Rhode Island</option>

                        <option value="SC">South Carolina</option>
                        <option value="SD">South Dakota</option>
                        <option value="TN">Tennessee</option>
                        <option value="TX">Texas</option>

                        <option value="UT">Utah</option>
                        <option value="VT">Vermont</option>
                        <option value="VA">Virginia</option>
                        <option value="WA">Washington</option>

                        <option value="WV">West Virginia</option>
                        <option value="WI">Wisconsin</option>
                        <option value="WY">Wyoming</option>
                    </select>
                </div>
            </div>
            <div class="row form-group-lg">
                 <div class="col-xs-6" style="padding-left: 0px">
                    <label for="signupZipCode" class="">ZipCode
                        <span style="color:red;">*</span>
                    </label>
                    <input type="text" id="signupZipCode" name="signupZipCode" class="form-control" placeholder="ZipCode" required>
                </div>
                <div class="col-xs-6" style="padding-right: 0px">
                    <label for="signupCountry" class="">Country
                        <span style="color:red;">*</span>
                    </label>
                    <select class="selectpicker form-control" required="true">
                        <option value="United States">United States</option>
                    </select>
                </div>
            </div>
            <div class="row form-group-lg">
                <label for="signupWebsite" class="">Website</label>
                <input type="text" id="signupWebsite" name="signupWebsite" class="form-control" placeholder="Website" >
            </div>
            <div class="row form-group-lg">
                <div class=" col-xs-6" style="padding-left: 0px" >
                    <label for="signupPhone" class="">Phone
                        <span style="color:red;">*</span>
                    </label>
                    <input type="tel" id="signupPhone" name="signupPhone" class="form-control" placeholder="Phone" required>
                </div>
                <div class="col-xs-6" style="padding-right: 0px" >
                    <label for="signupFax" class="">Fax</label>
                    <input type="tel" id="signupFax" name="signupFax" class="form-control" placeholder="Fax" >
                </div>
            </div>

            <h3 class="form-signin-heading">3. Profile</h3>

            <div class="row form-group-lg">
                <label for="recipientProfileInput" class="">Profile Picture</label>
                <input type="hidden" name="MAX_FILE_SIZE" value="1024" />
                <input type="file" id="recipientProfileInput" name="recipientProfile" accept="image/*" >
                <div style="float: left">File size max 1M</div><br>
                <label for="signupVideoUrl" class="">Or paste a YouTube link here</label>
                <input type="text" id="signupVideoUrl" name="signupVideoUrl" class="form-control" placeholder="http://">
            </div>
            <div style="padding-bottom: 1%"> &nbsp</div>

            <div class="row form-group-lg">
                <label for="signupMission" class="">Mission
                    <span style="color:red;">*</span>
                </label>
                <textarea id="signupMission" name="signupMission" class="form-control" maxlength="3000" rows="5" placeholder="Mission" style="height:auto; resize:none">

                </textarea>
            </div>
            <div style="padding-bottom: 1%"> &nbsp</div>
            <div class="row form-group-lg">
                <label for="signupFBPage" class="">Facebook Page</label>
                <input type="text" id="signupFBPage" name="signupFBPage" class="form-control" placeholder="Facebook Page">
            </div>
            <div style="padding-bottom: 1%"> &nbsp</div>

            <button id="recipientSignupFormButton" class="btn btn-lg btn-primary btn-block"  type="submit" >SIGN UP</button>
    </form>


</div>
<div class="container" style="padding-top: 2%">
    <div class="text-center" >
        Already have an account? <a href="/login/signin">Sign In</a>
    </div>
</div>
<%include ../layout/footer.ejs%>
<script src="/jquery/dist/jquery.min.js"></script>
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/jquery-validation/dist/jquery.validate.js"></script>
<script>
    $('.selectpicker').selectpicker();
</script>
</body>

</html>