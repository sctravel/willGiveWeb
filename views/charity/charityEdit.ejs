            </form>

        </div>


        </div>
        <h3>Profile Picture</h3>
        </hr>
        <div id="wrapper" class="container-fluid" style="padding-top: 2%">
            <div id="updatePictureSuccessMessage" class="form-group" style="padding-bottom: 1%; display : none">
                <p style="margin-top: 0px; float: left;color: green;font-style:italic">You've successfully updated your profile picture.</p><br>
            </div>
            <div id="updatePictureFailMessage" class="form-group" style="padding-bottom: 1%; display : none">
                <p style="margin-top: 0px; float: left;color: red; font-style: italic">Update profile picture failed. Please try it again.</p><br>
            </div>
            <form action="/services/recipient/profilePictureUpload" id="profileIconUploadForm" method="post" enctype="multipart/form-data" onsubmit="return checkImageSize(1024)">
                <div class="col-xs-8 col-xs-push-2">
                    <img id="previewProfilePicture" src="/resources/recipients/profilePicture/pp_<%=user.userId%>" class="text-center" alt="" width="100%" height="20%"/>
                </div>
                <input type="hidden" name="MAX_FILE_SIZE" value="1024" />
                <input type="file" id="recipientProfileInput" name="recipientProfile" accept="image/*" >
                <div style="float: left">File size max 1M</div><br>
                <button id="submitProfileIconUploadFormButton" class="btn btn-lg btn-primary btn-block" type="submit" >Upload Profile Picture</button>
            </form>
            <div style="padding-bottom: 1%"> &nbsp</div>
        </div>
        <h3>Password</h3>
        </hr>
        <div id="wrapper" class="container-fluid" style="padding-top: 2%">

            <div id="updatePasswordSuccessMessage" class="form-group" style="padding-bottom: 1%; display : none">
                <p style="margin-top: 0px; float: left;color: green;font-style:italic">You've successfully updated your password.</p><br>
            </div>
            <div id="updatePasswordFailMessage" class="form-group" style="padding-bottom: 1%; display : none">
                <p style="margin-top: 0px; float: left;color: red; font-style: italic">Update password failed. Please try it again.</p><br>
            </div>
            <form id="recipientUpdatePasswordForm" class="" method="post" style="padding-top: 2%">

                <div class="form-group" style="padding-bottom: 1%">
                    <label class="control-label col-xs-4" for="oldPassword">Old Password</label>
                    <div class="input-group col-xs-6" >
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                        <input type="password" id="oldPassword" name="oldPassword" class="form-control" placeholder="" minlength="8" required>
                    </div>
                </div>
                <div class="form-group" style="padding-bottom: 1%">
                    <label class="control-label col-xs-4" for="newPassword">New Password</label>

                    <div class="input-group col-xs-6">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                        <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="" minlength="8" required>
                    </div>
                </div>
                <div class="form-group" style="padding-bottom: 1%">
                    <label class="control-label col-xs-4" for="confirmPassword">Confirm Password</label>

                    <div class="input-group col-xs-6">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                        <label for="confirmPassword" class="sr-only">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="" equalTo="#newPassword" minlength="8" required>
                    </div>
                </div>
                <div style="padding-top: 1%; padding-bottom: 2%;">
                    <button id="submitUpdateProfilePasswordButton" class="btn btn-lg btn-primary btn-block" type="submit" >Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
<%include ../layout/footer.ejs%>

<script src="/jquery/dist/jquery.js"></script>
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/jquery-validation/dist/jquery.validate.js"></script>

<script>
    //show the images immediately after choosing it, before upload
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#previewProfilePicture').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }


    var formValidateParams = {
        errorClass: "my-error-class",
        //validClass: "my-valid-class",
        rules: {
            name: "required",
            ein: "required",
            category: "required",
            address: "required",
            city: "required",
            state: "required",
            zipCode: "required",
            country: "required",
            phone: {
                required: true,
                digits: true
            },
            fax: {
                digits:true
            },

            contactPersonName: "required",
            contactPersonTitle: "required",
            mission: "required",

            email: {
                required : true,
                email : true
            }
        }

    };
    $("#recipientUpdateAccountInfoForm").validate(
            formValidateParams
    );
    $('#recipientUpdateAccountInfoForm').submit(function(event){
        event.preventDefault();
        if (!$("#recipientUpdateAccountInfoForm").valid()) {
            console.log("Recipient sign Up form is not valid!");
            return;
        }

        var recipientUpdateForm = {};
        recipientUpdateForm.email = $('#email').val();
        recipientUpdateForm.name = $('#name').val();
        recipientUpdateForm.ein = $('#ein').val();
        recipientUpdateForm.address = $('#address').val();
        recipientUpdateForm.city = $('#city').val();
        recipientUpdateForm.state = $('#state').val();
        recipientUpdateForm.country = $('#country').val();
        recipientUpdateForm.zipCode = $('#zipCode').val();
        recipientUpdateForm.website = $('#website').val();
        recipientUpdateForm.phone = $('#phone').val();
        recipientUpdateForm.fax = $('#fax').val();
        recipientUpdateForm.mission = $('#mission').val();
        recipientUpdateForm.facebookPage = $('#facebookPage').val();
        recipientUpdateForm.contactPersonName= $('#contactPersonName').val();
        recipientUpdateForm.contactPersonTitle= $('#contactPersonTitle').val();
        recipientUpdateForm.category = $('#category').val();
        //recipientSignUpForm.imageFile = $('#recipientProfileInput');

        console.dir(recipientUpdateForm);
        $.post("/services/charity/updateAccountInfo",{updatedData: recipientUpdateForm}, function(data){
            if(data == "success") {
                $('#updateAccountSuccessMessage').show();
                $('#updateAccountFailMessage').hide();
            } else {
                $('#updateAccountSuccessMessage').hide();
                $('#updateAccountFailMessage').show();
            }
        });

    });

    $("#recipientProfileInput").change(function(){
        readURL(this);
    });

    var updatePasswordFormValidateParams = {
        errorClass: "my-error-class",
        rules: {
            oldPassword: {
                required: true,
                minlength: 8
            },
            newPassword: {
                required: true,
                minlength: 8
            },
            confirmPassword: {
                required: true,
                minlength: 8,
                equalTo : newPassword
            }
        },
        messages: {
            oldPassword: {
                required: "Required.",
                minlength: "Password at least 8 chars."
            },
            newPassword: {
                required: "Required.",
                minlength: "Password at least 8 chars."
            },
            confirmPassword: {
                required: "Required.",
                minlength: "Password at least 8 chars.",
                equalTo: "Password doesn't match."
            }
        }
    };
    $("#recipientUpdatePasswordForm").validate(
            updatePasswordFormValidateParams
    );
    //Update Password
    $('#recipientUpdatePasswordForm').submit(function( event ) {
        event.preventDefault();
        $('#updatePasswordSuccessMessage').hide();
        $('#updatePasswordFailMessage').hide();
        if (!$("#recipientUpdatePasswordForm").valid()) {
            console.log("recipientUpdatePasswordForm is not valid!");
            return;
        }
        var updatedData={};
        updatedData.oldPassword = $('#oldPassword').val();
        updatedData.newPassword = $('#newPassword').val();
        updatedData.confirmPassword = $('#confirmPassword').val();
        $.post('/services/charity/updatePassword', {updatedData: updatedData}, function(data) {
            if(data=='success') {
                $('#updatePasswordSuccessMessage').show();
                $('#updatePasswordFailMessage').hide();
            } else {
                $('#updatePasswordSuccessMessage').hide();
                $('#updatePasswordFailMessage').html(data).css({'color': 'red', 'font-style' : 'italic'}).show();
            }
            $('input[type="password"]').val('');
        });
    });

    var charity = {};
    $( document ).ready( function(){
        var userId = $('#userId').html().trim();

        console.log('userId-'+userId);
        $.get('/services/charityById/'+userId, function(data){
            charity = data;
            console.dir(data);
            $('#ein').val(charity.ein);
            $('#category').val(charity.category);
            $('#website').val(charity.website);
            $('#facebookPage').val(charity.facebookUrl);
            $('#address').val(charity.address);
            $('#city').val(charity.city);
            $('#state').val(charity.state);
            $('#country').val(charity.country);
            $('#zipCode').val(charity.zipCode);
            $('#phone').val(charity.phone);
            $('#fax').val(charity.fax);
            $('#contactPersonName').val(charity.contactPersonName);
            $('#contactPersonTitle').val(charity.contactPersonTitle);
            $('#mission').val(charity.mission);

        })
    });

</script>
</body>

</html>